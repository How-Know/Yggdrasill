{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "HomeworkCommandV1",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "action": {"type": "string", "enum": ["start", "pause", "submit", "confirm", "wait", "complete"]},
    "academy_id": {"type": "string", "format": "uuid"},
    "student_id": {"type": "string", "minLength": 1},
    "item_id": {"type": "string", "minLength": 1},
    "idempotency_key": {"type": "string", "format": "uuid"},
    "at": {"type": "string", "format": "date-time"}
  },
  "required": ["action", "academy_id", "item_id", "idempotency_key", "at"]
}


